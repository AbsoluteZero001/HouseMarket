<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springboot.springboothousemarket.Mapper.RegisterRequestMapper">

    <resultMap id="BaseResultMap" type="com.springboot.springboothousemarket.dto.RegisterRequest">
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="role" column="role"/>
        <result property="status" column="status"/>
    </resultMap>

    <!-- show() -->
    <select id="show" resultMap="BaseResultMap">
        SELECT *
        FROM users LIMIT 1
    </select>

    <!-- register() -->
    <insert id="register">
        INSERT INTO users(username, password, role, status)
        VALUES (#{username}, #{password}, #{role}, #{status})
    </insert>

    <!-- 根据用户名和密码查询用户 -->
    <select id="findUserByUsernameAndPassword" resultMap="BaseResultMap">
        SELECT *
        FROM users
        WHERE username = #{username}
          AND password = #{password}
    </select>

    <!-- login() -->
    <select id="login" resultMap="BaseResultMap">
        SELECT *
        FROM users
        WHERE username = #{username}
          AND password = #{password}
          AND role = #{role}
    </select>

</mapper>
